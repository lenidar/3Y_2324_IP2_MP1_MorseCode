        <CheckBox x:Name="chkbWriteMode" Content="Write Mode" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Checked="chkbWriteMode_Checked" Unchecked="chkbWriteMode_Unchecked"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Margin="10,78,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="417"/>
        <Rectangle  Stroke="Black" VerticalAlignment="Top" Margin="430,100,0,0" Width="10" Height="10" HorizontalAlignment="Left" Opacity="0"/>

    </Grid>
</Window>
