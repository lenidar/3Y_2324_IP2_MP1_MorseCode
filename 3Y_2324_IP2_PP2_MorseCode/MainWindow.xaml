        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3Y_2324_IP2_PP2_MorseCode"
        mc:Ignorable="d"
        Title="Morse Code" Height="130" Width="450" SizeToContent="WidthAndHeight">
